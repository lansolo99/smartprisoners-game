{
  "name": "smartprisoners",
  "version": "1.0.0",
  "description": "smartprisoners app",
  "author": "lansolo99",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "cordovabuild": "npm run build-spa && npm run replace-relative-paths && npm run copy-cordova && cd cordova && cordova build android;",
    "build-spa": "nuxt build --spa",
    "lint": "eslint --fix --ext .js,.vue --ignore-path .gitignore .",
    "replace-relative-paths": "replace '/nuxtfiles/' 'nuxtfiles/' dist --recursive && replace '/assets/' 'nuxtfiles/' dist --recursive && replace '(href|src|\"href\"|\"src\")=\"/' '$1=\"../' dist --recursive && replace '(href|src|\"href\"|\"src\"):\"/' '$1:\"../' dist --recursive",
    "copy-cordova": "cp -R dist/* cordova/www/",
    "clear-cordova": "rm -R cordova/www/*",
    "run-android": "cd cordova && cordova run android",
    "dbreset": "firebase firestore:delete --all-collections -y",
    "runrelease": "cd cordova && adb install -r platforms/android/app/release/app-release.apk",
    "rundebug": "cd cordova && adb install -r platforms/android/app/build/outputs/apk/debug/app-debug.apk"
  },
  "dependencies": {
    "@airbnb/node-memwatch": "^1.0.2",
    "@bazzite/nuxt-netlify": "^0.1.1",
    "@nuxtjs/axios": "^5.3.6",
    "@nuxtjs/dotenv": "^1.4.0",
    "@nuxtjs/sentry": "^3.2.4",
    "@nuxtjs/style-resources": "^0.1.2",
    "@shopify/draggable": "^1.0.0-beta.8",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "core-js": "^2.6.10",
    "date-fns": "^1.30.1",
    "firebase": "^7.6.1",
    "gsap": "^2.1.3",
    "node-sass": "^7.0.0",
    "nuxt": "^2.0.0",
    "nuxt-memwatch": "^0.1.2",
    "odometer": "^0.4.8",
    "sass-loader": "^7.1.0",
    "svg.js": "^2.7.1",
    "v-click-outside": "^2.1.4",
    "vue-async-computed": "^3.7.0",
    "vue-awesome-countdown": "^1.0.23",
    "vue-multi-ref": "^2.0.1",
    "vue-odometer": "^1.0.2",
    "vue-slider-component": "^3.0.34",
    "vue-typer": "^1.2.0",
    "vue2-touch-events": "^2.0.1",
    "vuelidate": "^0.7.4",
    "vuex-persistedstate": "^2.7.1"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config": "^2.0.2",
    "@nuxtjs/eslint-module": "^1.0.0",
    "@nuxtjs/global-components": "^0.4.1",
    "babel-eslint": "^10.0.1",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-standard": ">=12.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": ">=22.3.0",
    "eslint-plugin-node": ">=8.0.1",
    "eslint-plugin-nuxt": ">=0.4.2",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": ">=4.0.1",
    "eslint-plugin-standard": ">=4.0.0",
    "eslint-plugin-vue": "^6.2.2",
    "nodemon": "^1.18.9",
    "prettier": "^1.19.1",
    "replace": "^1.1.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2"
  }
}
